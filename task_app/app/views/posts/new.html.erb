<div class="new">
  <h1>スケジュール新規登録</h1>
</div>
<% @post.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<%= form_tag("/posts", method: :post) do %>
  <table class="new_table">
    <tr class="new_tittle">
      <th class="table_name">タイトル</th>
      <th class="table_form"><input value="<%= @post.tittle %>" name="tittle"></th>
    </tr>
    <tr class="new_start">
      <th class="table_name">開始日</th>
      <th class="table_form"><input type="date" value="<%= @post.start %>" name="start"></th>
    </tr>
    <tr class="new_stop">
      <th class="table_name">終了日</th>
      <th class="table_form"><input type="date" name="stop" value="<%= @post.stop %>"></th>
    </tr>
    <tr class="new_detail">
      <th class="table_name">スケジュール詳細</th>
      <th class="table_form"><textarea name="detail"><%= @post.detail %></textarea></th>
    </tr>
  </table>
  <div class="keep_btn">
   <input type="submit" value="保存">
  </div>
<% end %>